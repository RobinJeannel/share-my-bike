<%= form_for(@bike) do |f| %>
  <%= f.label :brand %>
  <%= f.text_field :brand %>

  <%= f.label :category %>
  <%= f.select :category, "VTT"=>"VTT", "Fixie"=>"Fixie", "Race"=>"Race", "City"=>"City"%>

  <%= f.label :condition %>
  <%= f.select :condition, "Brand New"=>"Brand New", "Used"=>"Used", "Very Used"=>"Very Used"%>

  <%= f.label :size %>
  <%= f.select :size, "S"=>"S", "M"=>"M", "L"=>"L", "XL"=>"XL"%>

  <%= f.submit %>
<% end %>

<%= link_to 'Accueil', bikes_path %>